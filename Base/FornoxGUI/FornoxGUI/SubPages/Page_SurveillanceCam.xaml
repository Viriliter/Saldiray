<Page x:Class="FornoxGUI.SubPages.Page_SurveillanceCam"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FornoxGUI.SubPages"
      xmlns:externalscripts="clr-namespace:FornoxGUI.ExternalScripts"
      xmlns:asf="clr-namespace:AirspaceFixer;assembly=AirspaceFixer"
      xmlns:controls="clr-namespace:WPFMediaKit.DirectShow.Controls;assembly=WPFMediaKit"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="Page_SurveillanceCam" DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid Background="Black">

        <controls:VideoCaptureElement x:Name="cameraCaptureElement" Height="766" Width="1366" EnableSampleGrabbing="True" Visibility="Visible"
                                      Margin="4"/>
        <StackPanel Orientation="Horizontal">
            <Label Height="40" Width="250" Content="SURVEILLANCE CAM" Margin="50,50,0,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Foreground="White"/>
        </StackPanel>

    </Grid>
</Page>
